{% extends "html.html.twig" %}

{% block head_title %}
AuthBucket\OAuth2 - Demo Authorization Server
Form Login
{% endblock %}

{% block page_top %}
<h1 class="page-header">AuthBucket\OAuth2 - Demo Authorization Server</h1>
{% endblock %}

{% block page %}
<div class="row">
    <div class="col-md-9">
        <h2 class="page-header">Form Login</h2>
        <form action="{{ path('oauth2_authorize_form_login_check') }}" method="post" role="form">
            {{ error }}
            <div class="form-group">
                <label>Username</label>
                <input class="form-control" type="text" name="_username" value="demousername1" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" name="_password" value="demopassword1" />
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit" name="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-3">
        <h2 class="page-header">Actions</h2>
        <p><a class="btn btn-primary" role="button" href="{{ path('index') }}">Return</a></p>
    </div>
</div>
{% endblock %}
